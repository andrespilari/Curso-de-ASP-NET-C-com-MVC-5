@model Introducao.Models.Usuario

@{
    ViewBag.Title = "Usuario";
}

<h2>Validação de usuários</h2>
@using (Html.BeginForm())
{
    //Comando abaixo valida o formulário
    @Html.ValidationSummary(true, "Validações gerais para teste 123")
    <fieldset>
        <legend>Dados do usuário</legend>
        <div class="editor-label">
            @Html.LabelFor(x => x.Nome)
        </div>
        <div class="editor-campo">
            @Html.EditorFor(x => x.Nome)
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <hr />
        <div>
            @Html.LabelFor(x => x.Observacao)
        </div>
        <div>
            @Html.TextAreaFor(x => x.Observacao)
            @Html.ValidationMessageFor(x => x.Observacao)
        </div>
        <hr />
        <div>
            @Html.LabelFor(x => x.Idade)
        </div>
        <div>
            @Html.EditorFor(x => x.Idade)
            @Html.ValidationMessageFor(x => x.Idade)
        </div>
        <hr />
        <div>
            @Html.LabelFor(x => x.Email)
        </div>
        <div>
            @Html.EditorFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <hr />
        <div>
            @Html.LabelFor(x => x.Login)
        </div>
        <div>
            @Html.EditorFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <hr />
        <div>
            @Html.LabelFor(x => x.Senha)
        </div>
        <div>
            @Html.PasswordFor(x => x.Senha)
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
        <hr />
        <div>
            @Html.LabelFor(x => x.ConfirmarSenha)
        </div>
        <div>
            @Html.PasswordFor(x => x.ConfirmarSenha)
            @Html.ValidationMessageFor(x => x.ConfirmarSenha)
        </div>
        <hr />
        <input type="submit" value="Cadastrar" />
    </fieldset>

    @section Scripts{
            @Scripts.Render("~/bundles/jqueryval");
        }
}